<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/main1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_main"
            android:textStyle="bold"
            android:textSize="12pt"
            android:layout_marginTop="20dp"
            android:layout_gravity="left"
            android:textColor="#000000"
            android:layout_marginLeft="30sp" />
        <TextView
            android:id="@+id/main2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:text="@string/board"
            android:textSize="12pt"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left"
            android:layout_marginLeft="30sp">

            <TextView
                android:id="@+id/lastUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/lastUpdate"
                android:textSize="7pt"
                android:layout_marginRight="5sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/updateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/emptyNum"
                android:textSize="7pt"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/totalCases"
                android:layout_marginTop="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/totalCases"
                android:textColor="#000000"
                android:textSize="9pt"/>
            <TextView
                android:id="@+id/totalCasesNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/emptyNum"
                android:textSize="30pt"
                android:textColor="#000000"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/up"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/up_arrow1"
                    android:layout_gravity="center_vertical">

                </ImageView>

                <TextView
                    android:id="@+id/newCasesNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/emptyNum"
                    android:textSize="15pt"
                    android:textColor="#FF0000"
                    android:textStyle="bold"/>

            </LinearLayout>
        </LinearLayout>
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="2"
            android:rowCount="2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/activeCases"
                    android:layout_marginTop="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/activeCases"
                    android:textColor="#000000"
                    android:textSize="7pt"/>
                <TextView
                    android:id="@+id/activeCasesNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/emptyNum"
                    android:textSize="20pt"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
                    <!--                    <LinearLayout-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_gravity="center"-->
                    <!--                        android:orientation="horizontal">-->

                    <!--                        <ImageView-->
                    <!--                            android:id="@+id/up2"-->
                    <!--                            android:layout_width="25dp"-->
                    <!--                            android:layout_height="25dp"-->
                    <!--                            android:src="@drawable/up_arrow1"-->
                    <!--                            android:layout_gravity="center_vertical">-->
                    <!--                        </ImageView>-->

                    <!--                        <TextView-->
                    <!--                            android:id="@+id/newCasesIncrement"-->
                    <!--                            android:layout_width="wrap_content"-->
                    <!--                            android:layout_height="wrap_content"-->
                    <!--                            android:layout_gravity="center"-->
                    <!--                            android:text="@string/emptyNum"-->
                    <!--                            android:textSize="15pt"-->
                    <!--                            android:textColor="#FF0000"-->
                    <!--                            android:textStyle="bold"/>-->

                    <!--                    </LinearLayout>-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/deaths"
                    android:layout_marginTop="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/deaths"
                    android:textColor="#000000"
                    android:textSize="7pt"/>
                <TextView
                    android:id="@+id/DeathsNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/emptyNum"
                    android:textSize="20pt"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
                    <!--                    <LinearLayout-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_gravity="center"-->
                    <!--                        android:orientation="horizontal">-->

                    <!--                        <ImageView-->
                    <!--                            android:id="@+id/up3"-->
                    <!--                            android:layout_width="25dp"-->
                    <!--                            android:layout_height="25dp"-->
                    <!--                            android:src="@drawable/up_arrow1"-->
                    <!--                            android:layout_gravity="center_vertical">-->

                    <!--                        </ImageView>-->

                    <!--                        <TextView-->
                    <!--                            android:id="@+id/deathsNumIncrement"-->
                    <!--                            android:layout_width="wrap_content"-->
                    <!--                            android:layout_height="wrap_content"-->
                    <!--                            android:layout_gravity="center"-->
                    <!--                            android:text="@string/emptyNum"-->
                    <!--                            android:textSize="15pt"-->
                    <!--                            android:textColor="#FF0000"-->
                    <!--                            android:textStyle="bold"/>-->

                    <!--                    </LinearLayout>-->
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/currentHosp"
                    android:layout_marginTop="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/currentHosp"
                    android:textColor="#000000"
                    android:textSize="7pt"/>
                <TextView
                    android:id="@+id/currentHospNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/emptyNum"
                    android:textSize="20pt"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/totalHospitalized"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/totalHosp"
                        android:textSize="7pt"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/hospitalizedNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/emptyNum"
                        android:layout_marginLeft="5dp"
                        android:textSize="8pt"
                        android:textColor="#000000"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/currentICU"
                    android:layout_marginTop="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/currentICU"
                    android:textColor="#000000"
                    android:textSize="7pt"/>
                <TextView
                    android:id="@+id/currentICUNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/emptyNum"
                    android:textSize="20pt"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/everICU"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text=""
                        android:textSize="7pt"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/everICUNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text=""
                        android:layout_marginLeft="5dp"
                        android:textSize="8pt"
                        android:textColor="#000000"/>

                </LinearLayout>
            </LinearLayout>
        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="10dp"
                    android:focusable="true"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="OnClickRegionalData">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/regional_data_main"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textSize="15pt"
                                android:textColor="@color/whiteColor"
                                android:background="#66000000"
                                android:text="@string/test_regional_data" />
                        </LinearLayout>
                    </FrameLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="10dp"
                    android:focusable="true"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="onDataClick"
                    >

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="109dp"
                            android:src="@drawable/graph_menu_main" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="109dp"
                                android:background="#66000000"
                                android:gravity="center"
                                android:text="@string/dataButton"
                                android:textColor="@color/whiteColor"
                                android:textSize="15pt" />
                        </LinearLayout>
                    </FrameLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="10dp"
                    android:focusable="true"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="onNewsClick"
                    >

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="109dp"
                            android:src="@drawable/related_news_main" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="109dp"
                                android:background="#66000000"
                                android:gravity="center"
                                android:text="@string/relatedNews"
                                android:textColor="@color/whiteColor"
                                android:textSize="15pt" />
                        </LinearLayout>
                    </FrameLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>